{
  "formulas": [
    {
      "name": "Quadratic Formula",
      "formula": "x = (-b ± √(b²-4ac)) / 2a",
      "use": "Solving ax² + bx + c = 0",
      "example": "x² - 5x + 6 = 0 → x = 2 or x = 3"
    },
    {
      "name": "Difference of Squares",
      "formula": "a² - b² = (a+b)(a-b)",
      "use": "Factoring",
      "example": "x² - 9 = (x+3)(x-3)"
    },
    {
      "name": "Perfect Square",
      "formula": "(a±b)² = a² ± 2ab + b²",
      "use": "Expansion",
      "example": "(x+3)² = x² + 6x + 9"
    }
  ]
}
