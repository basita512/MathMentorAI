{
    "formulas": [
        {
            "name": "Power Rule",
            "formula": "d/dx(x^n) = nx^(n-1)",
            "use": "Differentiation",
            "example": "d/dx(x³) = 3x²"
        },
        {
            "name": "Chain Rule",
            "formula": "d/dx[f(g(x))] = f'(g(x))·g'(x)",
            "use": "Composite functions",
            "example": "d/dx(sin(x²)) = cos(x²)·2x"
        },
        {
            "name": "Product Rule",
            "formula": "d/dx(uv) = u'v + uv'",
            "use": "Product of functions",
            "example": "d/dx(x·sin(x)) = sin(x) + x·cos(x)"
        }
    ]
}